<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:gravity="center_vertical"
    android:elevation="6dp"
    android:outlineAmbientShadowColor="@color/colorSecondaryDark"
    android:outlineSpotShadowColor="@color/colorSecondaryDark"
    android:outlineProvider="background"
    android:background="@drawable/background_shape_item"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="10dp">

                <TextView
                    android:id="@+id/nameTextViewItemCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Book Name"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/authorTextViewItemCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Author"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

                <TextView
                    android:id="@+id/priceTextViewItemCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

        </LinearLayout>

</LinearLayout>
